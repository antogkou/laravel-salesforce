{
    "filePatterns": {
        "*.php": true,
        "composer.json": true,
        "*.blade.php": true,
        "config/*.php": true,
        "database/migrations/*.php": true,
        "routes/*.php": true,
        "tests/*.php": true
    },
    "languageFeatures": {
        "references": true,
        "completion": true,
        "diagnostics": true,
        "documentSymbols": true,
        "documentFormatting": true,
        "hover": true
    },
    "ignorePatterns": [
        "vendor/**",
        "node_modules/**",
        "storage/**",
        "bootstrap/cache/**"
    ]
}
